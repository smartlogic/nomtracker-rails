- if @error
  .error.rounded= h(@error)
  %p{:style => "clear: both;"}

- if flash[:notice]
  .informational.rounded= h(flash[:notice])
  %p{:style => "clear: both;"}
  
.content_bubble#login_form
  - form_tag session_path do
    .form_row
      = label_tag 'email', nil, :style => "display: inline-block;width: 100px;"
      = text_field_tag 'email', @email, :style => "width: 250px"
    
    .form_row
      = label_tag 'password', nil, :style => "display: inline-block;width: 100px;"
      = password_field_tag 'password', nil, :style => "width: 250px"
          
    %div{:style => "width: 100%;text-align:center"}
      = submit_tag 'Log in', :style => "margin: 20px 0;"
      %br
      = link_to "New to Nomtracker? Click here to sign up!", new_user_url

