%h1
  Log In

- if @error
  %p.error= h(@error)
  
- form_tag session_path do
  %p
    = label_tag 'email'
    %br
    = text_field_tag 'email', @email
  %p
    = label_tag 'password'
    %br
    = password_field_tag 'password', nil
  -# 
    Uncomment this if you want this functionality
    %p 
      %strong= label_tag 'remember_me', 'Remember me'
      %strong= check_box_tag 'remember_me', '1', @remember_me

  %p
    = submit_tag 'Log in'

= link_to "Register", new_user_url
