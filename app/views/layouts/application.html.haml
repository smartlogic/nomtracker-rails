<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html;charset=UTF-8", "http-equiv" => "content-type" }
    %title= yield(:title) || 'nomtracker'
    = javascript_include_tag :defaults
    = javascript_include_tag "json_autocompleter"
    = stylesheet_link_tag 'nomtracker'
    = yield(:head)
  %body
    #header
      #breadcrumb
        = link_to "Nomtracker", root_path
        = yield :breadcrumb
      #account_links
        = h(current_user.email) |
        = link_to "My Account", '#', :onclick => 'alert("Where?");', :accesskey => "a"
        |
        = link_to "Logout", logout_path, :accesskey => "l"
    
    = yield
    #footer
      &copy; 2009 All Rights Reserved.
      = link_to 'SmartLogic Solutions', 'http://www.smartlogicsolutions.com/'
      = link_to 'About', '/about.htm'
      = link_to 'Privacy', '#', :onclick => 'alert("Where?");'
      = link_to 'TOS', '#', :onclick => 'alert("Where?");'
    